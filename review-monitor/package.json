{
  "name": "blufocus-review-monitor",
  "version": "1.0.0",
  "description": "BluFocus 口碑监测：电商负面评论监测",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "build:esbuild": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@langchain/core": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "langchain": "^1.0.0",
    "dotenv": "^16.4.0",
    "node-cron": "^3.0.3",
    "fastify": "^5.1.0",
    "@fastify/static": "^8.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.0",
    "prettier": "^3.4.2",
    "eslint": "^9.15.0",
    "@eslint/js": "^9.15.0",
    "typescript-eslint": "^8.15.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
